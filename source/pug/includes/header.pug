header
  .overlay
    .container
      h2 Add New Issue
      
      form#addIssueForm
        .form-group
          label(for="issueDescriptionInput") Description
          input#issueDescriptionInput.form-input(type="text" placeholder="Enter here...")
        .form-group
          label(for="issueSeverityInput") Severity
          select#issueSeverityInput
            option(value="hide") Select
            option(value="low") Low
            option(value="medium") Medium 
            option(value="high") High 
        .form-group
          label(for="issueAssignedToInput") Assigned To
          input#issueAssignedToInput.form-input(type="text" placeholder="Enter here...")
        .form-group
          input#issueSubmit.btn(role="button" type="submit" value="Add")
